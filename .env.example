# Example environment file for reference
# Copy this to .env and fill in your actual values

# Database Configuration (Local Development)
DB_NAME=pmtool_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password

# Django Configuration
SECRET_KEY=your-secret-key-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Production Settings (set these on Render)
# DEBUG=False
# ALLOWED_HOSTS=your-app.onrender.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Backblaze B2 Configuration
# Get these from: https://secure.backblaze.com/app_keys.htm
USE_B2_STORAGE=True
B2_APPLICATION_KEY_ID=your_key_id_here
B2_APPLICATION_KEY=your_application_key_here
B2_BUCKET_NAME=your-bucket-name
B2_ENDPOINT_URL=https://s3.us-east-005.backblazeb2.com
B2_REGION=us-east-005

# Optional: Custom domain (if you set up Cloudflare or CDN)
# B2_CUSTOM_DOMAIN=cdn.yourdomain.com
